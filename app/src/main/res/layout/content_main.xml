<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="peepstake.priyank.craftystudio.peepstake.MainActivity"
    tools:showIn="@layout/activity_main">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.hookedonplay.decoviewlib.DecoView
                android:id="@+id/dynamicArcView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#8E24AA">

                <TextView
                    android:id="@+id/yourPercent_textview"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Your Percent "
                    android:textColor="#ffffff"

                    android:layout_margin="4dp"
                    />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="0dp"

                app:cardBackgroundColor="#f44336">

                <TextView
                    android:id="@+id/classAveragePercent_textview"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Class average Percent "
                    android:textColor="#ffffff"
                    android:layout_margin="4dp"
                    />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="0dp"

                app:cardBackgroundColor="#FFB300">

                <TextView
                    android:id="@+id/classHighestPercent_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class Highest Percent "
                    android:textColor="#ffffff"
                    android:layout_margin="4dp"
                    />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="0dp"

                app:cardBackgroundColor="#00897B">

                <TextView
                    android:id="@+id/classMaximumPercent_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class Maximum Percent "
                    android:textColor="#ffffff"
                    android:layout_margin="4dp"
                    />

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
